<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Ejercicio1_1.MainPage">

    <StackLayout>
        <Frame BackgroundColor="#2196F3" Padding="20" CornerRadius="0">
            <Label Text="Ejercicio1.1" HorizontalTextAlignment="Center" TextColor="White" FontSize="36"/>
        </Frame>

        <Label Text="Primer numero" FontSize="16" Padding="0,0,0,0" TextColor="Black"/>
        <Entry Placeholder="Ingrese un numero" Keyboard="Numeric" x:Name="txtnum1" Margin="5,0,5,0" TextColor="Black"/>

        <Label Text="Segundo numero" Padding="0,0,0,0" TextColor="Black" FontSize="16"/>
        <Entry Placeholder="Ingrese un numero" Keyboard="Numeric" x:Name="txtnum2" Margin="5,0,5,0" TextColor="Black"/>

        <Button Text="Suma" x:Name="btnsuma" Margin="10,0,10,0" Clicked="btnsuma_Clicked"/>
        <Button Text="Resta" x:Name="btnresta" Margin="10,0,10,0" Clicked="btnresta_Clicked"/>
        <Button Text="Division" x:Name="btndivi" Margin="10,0,10,0" Clicked="btndivi_Clicked"/>
        <Button Text="Multiplicacion" x:Name="btnmulti" Margin="10,0,10,0" Clicked="btnmulti_Clicked"/>

    </StackLayout>

</ContentPage>
